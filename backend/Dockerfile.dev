# SME Supply Chain Risk Analysis - Backend Development Dockerfile
# Usage: docker build -f Dockerfile.dev -t sme-backend-dev .
# For use with docker-compose.dev-full.yml

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies for asyncpg, health checks, and Playwright browser automation
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libpq-dev \
    curl \
    # Playwright/Chromium dependencies (ADR-007)
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libx11-6 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libxcb1 \
    libxkbcommon0 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    libatspi2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files first for layer caching
COPY requirements.txt requirements-dev.txt ./

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt -r requirements-dev.txt

# Install Playwright browser binaries (Chromium only for smaller image)
RUN playwright install chromium

# Copy application code (will be overridden by volume mount in dev)
COPY . .

# Expose port for uvicorn
EXPOSE 8000

# Run uvicorn with hot reload
# --reload-dir /app/app ensures only app code triggers reload (not alembic or tests)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-dir", "/app/app"]
